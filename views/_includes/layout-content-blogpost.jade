include mixin-wrapper-with-bg
include mixin-content-image

block vars

article.article--main.blogpost
    +wrapper-with-bg('header', imgHeader, imgDest, 'hero hero--bg hero--dualheight hero--title hero--blogpost')
        block header

        .section__next

    .article--main__text.wrapper
        .wrapper__inner
            .wrapper__content
                block content

if locals.blogposts && locals.blogposts.length > 2
    include partial-prevnext-blogpost
else
    include partial-want-more
