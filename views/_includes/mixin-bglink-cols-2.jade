mixin bglink-cols-2(url, title, source, dest)
    - var large_2x = resize.createImage({source: source, suffix: 'large-2x', dest: dest, w: 800, h: 500, quality: 30, crop: true})
    - var small_2x = resize.createImage({source: source, suffix: 'small-2x', dest: dest, w: 700, h: 400, quality: 30, crop: true})

    a.bglink.lazyload(href='#{url}', data-href='#{url}', data-bgset='#{large_2x} 1024w, #{small_2x} 640w', title='#{title}')
        .text
            block
