section.wrapper.footer-contact
    .inner
        header.section__header
            h1 Want to say hi?
        .content
            form(name="contact-form", method="post")
                .form-text
                    label Your name
                    input(type="text", name="title", placeholder="What is your name?")
                .form-text
                    label Your e-mail address
                    input(type="text", name="title", placeholder="What is your email address?")
                .form-text
                    label Your message
                    textarea(name="message", cols="40", rows="5", placeholder="Enter your message.")
                .actions
                    button.button.button--red(type="submit") Send message
